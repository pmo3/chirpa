<div>
  <div class="my-6 lg:flex lg:items-center lg:justify-between">
    <div class="flex-1 min-w-0">
      <h1 class="text-4xl font-semibold text-gray-800">Browse all chirps</h1>
      <p class="text-l text-indigo-600">Or use the search bar to narrow it down some</p>
      <p class="text-l text-indigo-600">Can't find the perfect thing to say? <%= link_to "Suggest a new chirp", new_chirp_path, class: "font-bold text-indigo-800" %></p>
    </div>
    <div class="mt-5 flex lg:mt-0 lg:ml-4">
      <%= form_tag chirps_path, method: :get do %>
        <%= text_field_tag :search_term, params[:search_term], class: "py-1 px-4 bg-white text-gray-800 border border-indigo-600 rounded-md" %>
        <%= submit_tag "Search", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700 transition duration-150 ease-in-out cursor-pointer", name: nil %>
      <% end %>
    </div>
  </div>
  
  <% @chirps.each do |chirp| %>
    <%= render partial: "chirp_display", locals: { chirp: chirp } %>
  <% end %>
</div>

<%= will_paginate @chirps, renderer: @will_paginate_renderer %>